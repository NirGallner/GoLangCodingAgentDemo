{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Package",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}"
		},
		{
			"name": "Launch Current File",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${file}"
		},
		{
			"name": "Debug Tests (Current File)",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}",
			"args": [
				"-test.run",
				"^${selectedText}$"
			]
		},
		{
			"name": "Debug All Tests",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${workspaceFolder}"
		},
		{
			"name": "Attach to Process",
			"type": "go",
			"request": "attach",
			"mode": "local",
			"processId": 0
		}
	]
}
